{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".code",
    "newLine": "LF",
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
