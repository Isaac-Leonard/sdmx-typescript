{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "outDir": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ]
}
